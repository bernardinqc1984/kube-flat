# CIRRUS_ENV: poc, dev, test, staging, prod
CIRRUS_ENV=dev
VCD_ORG=cirrusdev
VDC=vdc-0037
# CIRRUS_DC: qbc1, qbc2, mtl1, mtl2
CIRRUS_DC=qbc1

export BUCKET=openshift-terraform-$CIRRUS_ENV
export KEY=${VCD_ORG}-${CIRRUS_DC}-${VDC}/cirrus-kubernetes/terraform.tfstate
export AWS_REGION=$CIRRUS_DC
export AWS_ACCESS_KEY_ID="user_bucket_S3"
export AWS_SECRET_ACCESS_KEY="access_key_bucket_S3"
export AWS_S3_ENDPOINT=https://cirrus-plateforme.os-qc1.cirrusproject.ca

export TF_VAR_vcd_pass='pass_vloud'
VAR_FILE="${VCD_ORG}-${CIRRUS_DC}-${VDC}.tfvars"
export TF_CLI_ARGS_plan="-var-file=${VAR_FILE}"
export TF_CLI_ARGS_apply="-var-file=${VAR_FILE}"
export TF_CLI_ARGS_destroy="-var-file=${VAR_FILE}"
